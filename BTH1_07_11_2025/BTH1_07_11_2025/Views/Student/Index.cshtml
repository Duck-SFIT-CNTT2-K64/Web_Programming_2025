@{
    ViewData["title"] = "student_list";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

@model IEnumerable<Student>
<a asp-action="Create" class="btn btn-primary">Create Student</a>
<a href="/Admin/Student/Add" class="btn btn-primary">Create Student (HTML)</a>
<a asp-controller="Student" asp-action="Create" class="btn btn-primary">Create Student (asp-action)</a>
<a asp-route="AdminStudentAdd" class="btn btn-primary">Create Student (asp-route)</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Mã</th>
            <th>Họ tên</th>
            <th>Ngày sinh</th>
            <th>Ngành</th>
            <th>Giới tính</th>
            <th>Hệ ĐT</th>
            <th>Địa chỉ</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.Name</td>
                <td>@s.DateOfBorth</td>
                <td>
                    @{
                        string str = "";
                        switch (s.branch)
                        {
                            case Branch.IT:
                                str = "CNTT";
                                break;
                            case Branch.BE:
                                str = "Kinh tế";
                                break;
                            case Branch.CE:
                                str = "Công trình";
                                break;
                            case Branch.EE:
                                str = "Điện - Điện tử";
                                break;
                        }
                    }
                    @str
                </td>
                <td>@(s.gender == Gender.Male ? "Nam" : "Nữ")</td>
                <td>@(s.IsRegular ? "Chính quy" : "Phi chính quy")</td>
                <td>@s.Address</td>
                <td>@s.Email</td>
            </tr>
        }
    </tbody>
</table>